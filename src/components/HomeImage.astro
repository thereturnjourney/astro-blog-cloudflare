---
import Picture from 'astro/components/Picture.astro';
import { Image } from 'astro:assets';
import { imgIXurl } from '../middleware/api';


---

<div class="w-[100%] h-[100vh]">
    <picture>
        <source srcset={`${imgIXurl}AstroJs/Blogs/Home/July-2024-Web.webp?lossless=true&h=800&w=1300`} media="(min-width: 1024px)" />
        <source srcset={`${imgIXurl}AstroJs/Blogs/Home/July-2024-Tab.webp?lossless=true&h=1024&w=768`} media="(min-width: 768px)" />
        <img
            src={`${imgIXurl}AstroJs/Blogs/Home/July-2024-Mobile.webp?lossless=true&h=800&w=1300`}
            alt="The Return Journey Blogs Home" 
            loading='eager'
            class="w-[100%] h-[100vh]"
        />
    </picture>
</div>
